<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>Database2020Library</display-name>

	<context-param>
  		<param-name>dbUrl</param-name>
  		<param-value>jdbc:mysql://localhost/mylibrary</param-value>
  	</context-param>
  	<context-param>
  		<param-name>dbUser</param-name>
  		<param-value>root</param-value>
  	</context-param>
  	<context-param>
  		<param-name>dbPassword</param-name>
  		<param-value>1234</param-value>
  	</context-param>

	<servlet>
		<servlet-name>LoginServlet</servlet-name>
		<servlet-class>com.sawan.Database2020.LoginServlet</servlet-class>
		<load-on-startup>0</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>LoginServlet</servlet-name>
		<url-pattern>/LoginServlet</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>RegistrationServlet</servlet-name>
		<servlet-class>com.sawan.Database2020.RegistrationServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>RegistrationServlet</servlet-name>
		<url-pattern>/RegistrationServlet</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>HomeServlet</servlet-name>
		<servlet-class>com.sawan.Database2020.HomeServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>HomeServlet</servlet-name>
		<url-pattern>/HomeServlet</url-pattern>
	</servlet-mapping>
</web-app>